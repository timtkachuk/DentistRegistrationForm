<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/admin.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Menu</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">
                            <i class="fa fa-home"></i>
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Booking" asp-action="Index">Bookings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="Index">User Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Procedure" asp-action="Index">Procedures</a>
                    </li>
                    <li class="nav-item">                        
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                            <i class="fa fa-power-off"></i>
                            Log Out
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="container bg-white border-left border-right shadow p-4">
        @RenderBody()
    </main>
    <footer class="container py-4">
        <strong>DentistApp</strong> - &copy; @DateTime.Today.Year - Timofei Tcaciuc All Rights Reserved
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/sweetalert2/dist/sweetalert2.all.min.js"></script>

    <script>
        const successToast = Swal.mixin({
            toast: true,
            icon: 'success',
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer)
                toast.addEventListener('mouseleave', Swal.resumeTimer)
            }
        });

        const errorToast = Swal.mixin({
            toast: true,
            icon: 'error',
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer)
                toast.addEventListener('mouseleave', Swal.resumeTimer)
            }
        });

    </script>

    @if (TempData["success"] != null)
    {
        <script>
            successToast.fire({
                title: '@TempData["success"]'
            });
        </script>
    }

    @if (TempData["error"] != null)
    {
        <script>
            errorToast.fire({
                title: '@TempData["error"]'
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>