@model User
@if (Model == null)
{
    <li class="nav-item">
        <a asp-controller="Account" asp-action="Register" class="btn btn-link text-secondary text-decoration-none">Register</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Account" asp-action="Login" class="btn btn-link mr-2 text-secondary text-decoration-none">Login</a>
    </li>
}
else
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-user"></i>  Welcome @Model.Name
        </a>
        <div class="dropdown-menu" aria-labelledby="userDropdown">
            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                <i class="fa fa-wrench"></i>
                My Profile
            </a>
            <a class="dropdown-item" asp-controller="Account" asp-action="New Booking">
                <i class="fa fa-wrench"></i>
                New Booking
            </a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                <i class="fa fa-power-off"></i>
                Logout
            </a>
        </div>
    </li>
}