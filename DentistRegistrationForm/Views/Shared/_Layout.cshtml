<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DentistRegistrationForm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" />
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Dentist App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link active" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                        @await Component.InvokeAsync("UserBar")
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="container bg-white border-left border-right shadow p-4">
            @RenderBody()
        </main>
    </div>
    <footer class="container py-4">
        <strong>DentistApp</strong> - &copy; @DateTime.Today.Year - Timofei Tcaciuc All Rights Reserved
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script src="~/lib/bootstrap-select/js/bootstrap-select.min.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
        $(() => {
            $(".selectpicker").selectpicker();
        });
    </script>

    @if (TempData["error"] != null)
    {
        <script>
            Swal.fire({
                icon: "error",
                title: "ERROR!",
                html: "@TempData["error"]"
            });
        </script>
    }
</body>
</html>
